{
    "version": 2,
    "buildCommand": "cd frontend && npm install && npm run build && cp -r dist/* ../public/",
    "outputDirectory": "public",
    "installCommand": "npm install && cd api && npm install && npx prisma generate && mkdir -p ../public",
    "functions": {
        "api/**/*.ts": {
            "runtime": "@vercel/node@3"
        }
    },
    "rewrites": [
        {
            "source": "/api/v1/health",
            "destination": "/api/v1/health.ts"
        },
        {
            "source": "/api/v1/auth/login",
            "destination": "/api/v1/auth/login.ts"
        },
        {
            "source": "/api/v1/auth/me",
            "destination": "/api/v1/auth/me.ts"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/index.ts"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}